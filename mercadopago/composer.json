{
  "config": {
    "prepend-autoloader": false
  },
  "require": {
    "squizlabs/php_codesniffer": "3.5.6",
    "friendsofphp/php-cs-fixer": "2.16.4"
  },
  "scripts": {
    "phpcs": [
        "Composer\\Config::disableProcessTimeout",
        "phpcs --extensions=php --warning-severity=0 --standard=phpcs.xml ."
    ],
    "phpcbf": [
        "Composer\\Config::disableProcessTimeout",
        "phpcbf --extensions=php --standard=phpcs.xml ."
    ]
}
}
